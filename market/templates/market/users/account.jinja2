{% extends 'market/base.jinja2' %}

{% block banner %}
{% endblock %}

{% block middle %}
    <div class="Middle Middle_top">
        <div class="Section Section_column Section_columnLeft">
            <div class="wrap">
                <div class="Section-column">
                    <div class="Section-columnSection">
                        <header class="Section-header">
                            <strong class="Section-title">{% trans %}Навигация{% endtrans %}
                            </strong>
                        </header>
                        <div class="Section-columnContent">
                            <div class="NavigateProfile">
                                <ul class="menu menu_vt">
                                    <li class="menu-item_ACTIVE menu-item"><a class="menu-link"
                                                                              href="{{ url('users:users_account') }}">
                                        {% trans %}Личный кабинет{% endtrans %}</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link" href="{{ url('users:users_profile') }}">
                                        {% trans %}Профиль{% endtrans %}</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link" href="{{ url('order_history') }}">
                                        {% trans %}История заказов{% endtrans %}</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link"
                                                             href="{{ url('users:browsing-history') }}">
                                        {% trans %}История просмотров{% endtrans %}</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="Section-content">
                    <div class="Account">
                        <div class="Account-group">
                            <div class="Account-column">
                                <div class="Account-avatar">
                                    <img
                                            src="{% if user.avatar.image == 'users/avatars/default/default_avatar1.png' %}
                                            {{ static('market/assets/img/icons/user_icon.png') }}
                                        {% else %}
                                            {{ user.avatar.image.url }}
                                        {% endif %}"
                                            alt="Avatar"/>
                                </div>
                            </div>
                            <div class="Account-column">
                                <div class="Account-name">{{ username }}
                                </div>
                                <a class="Account-editLink" href="{{ url('users:users_profile') }}">
                                    {% trans %}Редактировать профиль{% endtrans %}</a>
                            </div>
                        </div>
                        <div class="Account-group">
                            <div class="Account-column Account-column_full">
                                <div class="Order Order_anons">
                                    <div class="Order-personal">
                                        {% if order %}
                                            <div class="row">
                                                <div class="row-block">
                                                    {#                                            Не готово!!!!!!!!#}
                                                    <a class="Order-title" href="{{ url('order_details', pk=order.id) }}">{% trans %}Заказ{% endtrans %}
                                                        &#32;<span
                                                                class="Order-numberOrder">№{{ order_count }}</span>&#32;
                                                        {% trans %}
                                                            от{% endtrans %}&#32;<span
                                                                class="Order-dateOrder">{{ order.data.strftime('%m.%d.%Y') }}</span></a>
                                                    <div class="Account-editLink">
                                                        <a href="{{ url('order_history') }}">{% trans %}История
                                                            заказов{% endtrans %}</a>
                                                    </div>
                                                </div>
                                                <div class="row-block">
                                                    <div class="Order-info Order-info_delivery">
                                                        <div class="Order-infoType">{% trans %}Тип
                                                            доставки:{% endtrans %}
                                                        </div>
                                                        <div class="Order-infoContent">{{ order.get_delivery_display() }}
                                                            {% trans %}{% endtrans %}
                                                        </div>
                                                    </div>
                                                    <div class="Order-info Order-info_pay">
                                                        <div class="Order-infoType">{% trans %}Оплата:{% endtrans %}
                                                        </div>
                                                        <div class="Order-infoContent">{{ order.get_pay_display() }}
                                                            {% trans %}{% endtrans %}
                                                        </div>
                                                    </div>
                                                    <div class="Order-info">
                                                        <div class="Order-infoType">{% trans %}Общая
                                                            стоимость:{% endtrans %}
                                                        </div>
                                                        <div class="Order-infoContent">{{ order.total_cost }}$
                                                        </div>
                                                    </div>
                                                    <div class="Order-info Order-info_status">
                                                        <div class="Order-infoType">{% trans %}Статус:{% endtrans %}
                                                        </div>
                                                        <div class="Order-infoContent">{{ order.status }}
                                                            {% trans %}{% endtrans %}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        {% else %}
                                            <p>У вас нет заказов</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}