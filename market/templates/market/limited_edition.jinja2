<div class="Section Section_column Section_columnRight">
    <div class="wrap">
        <div class="Section-content">
            <div class="Slider Slider_carousel">
                <header class="Section-header Section-header_close">
                    <h2 class="Section-title">{% trans %}Ограниченный тираж{% endtrans %}
                    </h2>
                    <div class="Section-control">
                        <div class="Slider-navigate">
                        </div>
                    </div>
                </header>
                <div class="Slider-box Cards">
                    {% for product in limited_edition %}
                    <div class="Slider-item">
                        <div class="Slider-content">
                            <div class="Card"><a class="Card-picture" href="#"><img src="{{ product.preview.url }}" alt="{{ product.preview.name }}" /></a>
                                <div class="Card-content">
                                    <strong class="Card-title"><a href="#">{{ product.name}}</a>
                                    </strong>
                                    <div class="Card-description">
                                        <div class="Card-cost"><span class="Card-price">$85.00</span>
                                        </div>
                                        <div class="Card-category">{{ product.category_id.name }}
                                        </div>
                                        <div class="Card-hover"><a class="Card-btn" href="#"><img src="market/uploads/media/icons/card/cart.svg" alt="cart.svg" /></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>